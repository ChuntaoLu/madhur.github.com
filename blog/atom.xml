---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>{% include blogname.txt %}</title>
 <link href="{% include blogurl.txt %}/blog/atom.xml" rel="self"/>
 <link href="{% include blogurl.txt %}/blog/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>h{% include blogurl.txt %}/blog/</id>
 <author>
   <name>Madhur Ahuja</name>
   <email>ahuja.madhur@gmail.com</email>
 </author>
 
 {% for post in site.categories.blog limit:5 %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="{% include blogurl.txt %}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>id:{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>
